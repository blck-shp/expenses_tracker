json = {}

records = @records.map { |record|
  {
    id: record.id, 
    date: record.date,
    notes: record.notes,
    category: {
      id: record.category.id,
      name: record.category.name
    },
    amount: record.amount,
    record_type: record.record_type
  }
}

json[:records] = records
json[:pagination] = pagination_for(@records, params)

json
